<controls:MetroWindow x:Class="KSP_WPF.EmotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSP_WPF"
        mc:Ignorable="d"
        Closing="MetroWindow_Closing"
        ShowIconOnTitleBar="False"
        PreviewKeyDown="MetroWindow_PreviewKeyDown"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="느낌 달기" Icon="icon2.png" Height="230" Width="200" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="5,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Stretch" PreviewGotKeyboardFocus="MetroWindow_PreviewGotKeyboardFocus">
        <Button Tag="like" Content="좋아요" Click="Button_Click"/>
        <Button Tag="good" Content="멋져요" Margin="0,5,0,0" Click="Button_Click" />
        <Button Tag="pleasure" Content="기뻐요" Margin="0,5,0,0" Click="Button_Click" />
        <Button Tag="sad" Content="슬퍼요" Margin="0,5,0,0" Click="Button_Click" />
        <Button Tag="cheerup" Content="힘내요" Margin="0,5,0,0" Click="Button_Click" />
    </StackPanel>
</controls:MetroWindow>
